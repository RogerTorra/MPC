<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_buttons"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/songsButton"
        style="@style/navButton"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.25"
        android:onClick="operateButton"
        android:text="@string/songsButton" />

    <Button
        android:id="@+id/artistsButton"
        style="@style/navButton"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.25"
        android:onClick="operateButton"
        android:text="@string/artistsButton" />

    <Button
        android:id="@+id/albumsButton"
        style="@style/navButton"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.25"
        android:onClick="operateButton"
        android:text="@string/albumsButton" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/navButton"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.25"
        android:onClick="operateButton"
        android:text="@string/settings" />

</LinearLayout>